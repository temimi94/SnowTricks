{% extends 'base.html.twig' %}
{% form_theme formTrick 'bootstrap_4_layout.html.twig' %}
{% block title %}
	Cr√©er une figure
{% endblock %}

{% block body %}


	{{ form_start(formTrick) }}

	<div class="form-group">
		{{ form_label(formTrick.title)}}
		{{ form_widget(formTrick.title)}}
		<div class='form-error'>
			 {{ form_errors(formTrick.title) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(formTrick.content)}}
		{{ form_widget(formTrick.content)}}
		<div class='form-error'>
			{{  form_errors(formTrick.content) }}
		</div>
	</div>

	<div class="form-group">
	
		{{ form_row(formTrick.category)}}
		<div class='form-error'>
			 {{ form_errors(formTrick.category) }}
		</div>
	</div>

	<div class="form-group">

		{{ form_label(formTrick.image)}}
		{{ form_widget(formTrick.image)}}
		<div class='form-error'>
			 {{ form_errors(formTrick.image) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(formTrick.video)}}
		{{ form_widget(formTrick.video)}}
		<div class='form-error'>
		{{ form_errors(formTrick.video) }}
		</div>
	</div>

	
	{{ form_end(formTrick) }}


{% endblock %}
