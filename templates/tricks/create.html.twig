{% extends 'base.html.twig' %}
{% form_theme formTrick 'bootstrap_4_layout.html.twig' %}
{% block title %}
	{% if editMode %}
		Modifier la figure
	{% else %}
		Cr√©er une figure
	{% endif %}
{% endblock %}

{% block body %}
	{{ form_start(formTrick) }}

	{{ form_row(formTrick.title)}}
	{{ form_row(formTrick.content)}}
	{{ form_row(formTrick.groupeTrick)}}
	{{ form_row(formTrick.image)}}
	{{ form_row(formTrick.video)}}

	<!-- Submit Button-->
	<div class="d-grid">
		<button class="btn btn-primary btn-lg disabled" id="submitButton" type="submit">
			{% if editMode %}
				Enregistrer
			{% else %}
				Ajouter la figure
			{% endif %}
		</button>
	</div>
	{{ form_end(formTrick) }}


{% endblock %}
