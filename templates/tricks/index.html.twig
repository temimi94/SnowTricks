{% extends 'base.html.twig' %}

{% block body %}
	<section class="tricks">
		{% for trick in tricks %}
			<article class="py-5">
				<div class="row gx-5">
					<div class="col-lg-4 mb-5">
						<div class="card h-100 shadow border-0">
							<img class="card-img-top" src={{ trick.image }} alt="..."/>
							<div class="card-body p-4">
								<a class="text-decoration-none link-dark stretched-link" href="{{ path('app_tricks_show', {'id': trick.id})}}">
									<h5 class="card-title mb-3">{{ trick.title}}</h5>
								</a>
							</div>
						</div>
					</article>
				{% endfor %}
			</section>
		{% endblock %}
