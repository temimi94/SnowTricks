{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		<section class="py-5">
			{% for trick in tricks %}
				<article class="py-5">
					<div class="row gx-5">
						<div class="col-lg-4 mb-5">
							<div class="card h-100 shadow border-0">
								<img class="card-img-top" src={{ trick.image }} alt="..."/>
								<div class="card-body p-4">
									<a class="text-decoration-none link-dark stretched-link" href="{{ path('app_tricks_show', {'id': trick.id})}}">
										<h5 class="card-title mb-3">{{ trick.title}}</h5>
									</a>
								</div>
								<a href="{{ path('app_tricks_update', {'id': trick.id})}}">modifier</a>

							</div>
							<a href="{{ path('app_tricks_delete', {'id': trick.id})}}">Supprimer</a>
						</article>
					{% endfor %}
				</section>

				{# display navigation #}
				<div class="navigation d-flex justify-content-center ">
					{{ knp_pagination_render(tricks) }}
				</div>
			{% endblock %}
