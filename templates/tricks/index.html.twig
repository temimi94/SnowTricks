{% extends 'base.html.twig' %}

{% block body %}
	<a href="#" class="btn rounded-circle d-flex" style="justify-content: center; align-items: center;  cursor: pointer; width: 100px; height: 100px; position: fixed; right: -30px; bottom: 80px;">
		<img src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d6/Feather-arrows-arrow-up.svg/2048px-Feather-arrows-arrow-up.svg.png" style="width: 25px;" class="icon"/>
	</a>
	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	<div class="container" style="display: flex; flex-direction: row; flex-wrap: wrap; margin: 40px 0px; ">
		{% for trick in tricks %}
			<div class="card shadow border-0 " style="width: 12rem; height: 13rem; margin: 10px;">
				{% set firstImageDisplayed = false %}
				{% if trick.image|length > 0 %}
					{% for image in trick.image %}
						{% if not firstImageDisplayed %}
							<img src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ trick.title }}" class="card-img-top object-fit-cover"/>
							{% set firstImageDisplayed = true %}
						{% endif %}
					{% endfor %}
				{% else %}
					<img src="https://media.istockphoto.com/id/959512078/fr/photo/jeune-fille-effectue-des-sauts-avec-snowboard.jpg?s=1024x1024&w=is&k=20&c=GQcGjOj18RkM2MK97h3IAo0e8s1n3hIVPxIRZIykwKU=" alt="{{ trick.title }}" class="card-img-top"/>
				{% endif %}

				<div class="card-body  d-flex justify-content-between">
					<h5 class="card-title" style="font-size: 16px; color: black;">
						<a class="text-decoration-none" style="color: black; font-family: 'EB Garamond', serif !important;" href="{{ path('app_tricks_show', {'id': trick.id})}}">{{ trick.title}}</a>
					</h5>
					{% if trick.user.enabled == true %}

						<div class="card-btn">
							<a class="btn" href="{{ path('app_tricks_update', {'id': trick.id})}}" class="btn btn-primary">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" style="margin-right: -17px; margin-top: -15px;" height="18" fill="currentColor" class="bi bi-brush-fill" viewbox="0 0 16 16">
									<path d="M15.825.12a.5.5 0 0 1 .132.584c-1.53 3.43-4.743 8.17-7.095 10.64a6.067 6.067 0 0 1-2.373 1.534c-.018.227-.06.538-.16.868-.201.659-.667 1.479-1.708 1.74a8.118 8.118 0 0 1-3.078.132 3.659 3.659 0 0 1-.562-.135 1.382 1.382 0 0 1-.466-.247.714.714 0 0 1-.204-.288.622.622 0 0 1 .004-.443c.095-.245.316-.38.461-.452.394-.197.625-.453.867-.826.095-.144.184-.297.287-.472l.117-.198c.151-.255.326-.54.546-.848.528-.739 1.201-.925 1.746-.896.126.007.243.025.348.048.062-.172.142-.38.238-.608.261-.619.658-1.419 1.187-2.069 2.176-2.67 6.18-6.206 9.117-8.104a.5.5 0 0 1 .596.04z"/>
								</svg>
							</a>
							<a class="btn" href="{{ path('app_tricks_delete', {'id': trick.id})}}" onclick="return confirm('Voulez-vous supprimer dÃ©finitivement cette figure ?')">
								<svg xmlns="http://www.w3.org/2000/svg" style="margin-top: -15px;" width="13" height="18" fill="currentColor" class="bi bi-archive-fill" viewbox="0 0 16 16">
									<path d="M12.643 15C13.979 15 15 13.845 15 12.5V5H1v7.5C1 13.845 2.021 15 3.357 15h9.286zM5.5 7h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1 0-1zM.8 1a.8.8 0 0 0-.8.8V3a.8.8 0 0 0 .8.8h14.4A.8.8 0 0 0 16 3V1.8a.8.8 0 0 0-.8-.8H.8z"/>
								</svg>
							</a>
						</div>
					{% endif %}
				</div>
			</div>
		{% endfor %}
	</div>
	{# display navigation #}
	<div class="navigation d-flex justify-content-center mt-20 ">
		{{ knp_pagination_render(tricks) }}
	</div>

{% endblock %}
