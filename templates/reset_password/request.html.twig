{% extends 'base.html.twig' %}

{% block title %}réinitialisez votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h4 style="text-align: center; margin-top: 50px">réinitialisez votre mot de passe</h4>

    {{ form_start(requestForm) }}
    <div class="form-group col-md-6 mx-auto">
        {{ form_row(requestForm.email) }}
        <div>
            <small>
              Entrez votre adresse e-mail et nous vous enverrons un
                lien pour réinitialiser votre mot de passe.
            </small>
        </div>
</div>
        <button class="btn btn-outline-secondary shadow mt-4 mb-4 mx-auto ">Réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
{% endblock %}
